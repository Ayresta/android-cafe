<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="com.ajengkelin.androidcafe.DaftarPesananActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DAFTAR PESANAN"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/infoNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan : "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/judul"/>

    <TextView
        android:id="@+id/txtNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/infoNama"
        android:layout_below="@+id/judul"/>

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum Dibayar"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/infoStatus"
        android:layout_below="@+id/infoNama"/>

    <TextView
        android:id="@+id/infoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status                   : "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/infoNama"/>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvDaftarPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoStatus"
        android:layout_marginTop="30dp">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/infoHargaTot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:text="Harga Total "/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtHargaTotal"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:text="HargaTotal"/>


    <Button
        android:id="@+id/btnBayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bayar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
