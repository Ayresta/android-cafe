<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    tools:context="com.ajengkelin.androidcafe.DetailJumlahActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DETAIL PESANAN"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/judul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan masukkan jumlah makanan/minuman yang Anda pesan."
        android:textAlignment="center"
        android:layout_below="@id/judul"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/infoMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul2"
        android:text="Nama Menu : "/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/txtNamaMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/judul2"
        android:layout_toRightOf="@+id/infoMenu"
        android:text="Nama Menu"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/infoHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoMenu"
        android:text="Harga            : "/>

    <TextView
        android:id="@+id/txtHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNamaMenu"
        android:text="Harga"
        android:layout_toRightOf="@id/infoHarga"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/infoJumlah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoHarga"
        android:text="Jumlah          : "/>

    <EditText
        android:id="@+id/txtJumlah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jumlah"
        android:layout_below="@+id/txtHarga"
        android:layout_toRightOf="@+id/infoJumlah" />

    <Button
        android:id="@+id/btnSelesaiDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="Selesai" />


</RelativeLayout>
