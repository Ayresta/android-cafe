<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    tools:context="mobile.com.restoran.MasukkanJumlahActivity">

    <TextView
        android:id="@+id/namaPelangganTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Pelanggan : "
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/namaPelanggan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/namaPelangganTV"
        android:text="Nama Pelanggan"
        android:textAlignment="center"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/petunjuk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaPelanggan"
        android:text="Semua pesanan Anda berjumlah masing-masing 1."
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/petunjuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/petunjuk2"
        android:text="Silahkan klik tanda + jika ingin menambah jumlah pesanan."
        android:layout_centerHorizontal="true"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvJumlah"
        android:layout_below="@+id/petunjuk"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btnPesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Pesan" />

</RelativeLayout>
